{
  "name": "v2ray-electron",
  "productName": "V2Ray Electron",
  "description": "A V2Ray client built with Electron for Windows and macOS",
  "version": "v0.12.0",
  "author": "Jie Lu",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "license": "MIT",
  "dependencies": {
    "about-window": "^1.13.0",
    "auto-launch": "^5.0.1",
    "electron-debug": "^1.3.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-store": "^3.2.0",
    "electron-updater": "^4.0.6",
    "fs-extra": "^4.0.0",
    "monaco-loader": "^0.8.2",
    "sudo-prompt": "^8.1.0",
    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@types/node": "^10.14.4",
    "@types/semver": "^6.0.0",
    "@types/auto-launch": "^5.0.1",
    "adm-zip": "^0.4.7",
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.2.0",
    "prettier": "^1.17.1",
    "request": "^2.81.0",
    "typescript": "^3.5.1",
    "unzipper": "^0.8.11",
    "webpack": "^4.32.2"
  },
  "electronWebpack": {
    "renderer": {
      "sourceDirectory": null
    }
  },
  "build": {
    "publish": [
      "github"
    ],
    "appId": "com.v2ray.electron",
    "productName": "V2Ray Electron",
    "asarUnpack": [
      "assets/v2ray/**/*",
      "assets/proxy_conf_helper"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-macos",
          "to": "assets/v2ray/v2ray"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-win",
          "to": "assets/v2ray/v2ray"
        }
      ]
    }
  }
}
