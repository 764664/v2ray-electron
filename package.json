{
  "name": "v2ray-electron",
  "productName": "V2Ray Electron",
  "description": "A V2Ray client built with Electron for Windows and macOS",
  "version": "v0.13.0",
  "author": "Jie Lu",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist -c.compression=store -c.mac.identity=null",
    "lint": "eslint --max-warnings 0 --ext .js --ext .ts .",
    "download": "tsc download-v2ray.ts && node download-v2ray.js"
  },
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.1.3",
    "about-window": "^1.13.0",
    "auto-launch": "^5.0.1",
    "electron-debug": "^1.3.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-store": "^3.2.0",
    "electron-updater": "^4.0.6",
    "fs-extra": "^7.0.0",
    "monaco-loader": "^0.8.2",
    "react": "^16.8.6",
    "react-ace": "^7.0.2",
    "react-dom": "^16.8.6",
    "react-router-static": "^1.0.0",
    "source-map-support": "^0.5.10",
    "sudo-prompt": "^8.1.0",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "@types/auto-launch": "^5.0.1",
    "@types/fs-extra": "^7.0.0",
    "@types/node": "^10.14.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/request": "^2.48.1",
    "@types/semver": "^6.0.0",
    "@types/unzipper": "^0.9.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.9.0",
    "adm-zip": "^0.4.7",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "electron-webpack": "^2.7.2",
    "electron-webpack-ts": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.0",
    "lint-staged": ">=8",
    "prettier": "^1.17.1",
    "request": "^2.81.0",
    "ts-node": "^8.2.0",
    "typescript": "~3.4.0",
    "unzipper": "^0.8.11",
    "webpack": "^4.35.2"
  },
  "build": {
    "publish": [
      "github"
    ],
    "appId": "com.v2ray.electron",
    "productName": "V2Ray Electron",
    "asarUnpack": [
      "assets/v2ray/**/*",
      "assets/proxy_conf_helper"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-macos",
          "to": "assets/v2ray/v2ray"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-win",
          "to": "assets/v2ray/v2ray"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
