{
  "name": "v2ray-electron",
  "description": "A V2Ray client built with Electron for Windows and macOS",
  "version": "v0.0.1",
  "author": "Jie Lu",
  "main": "src/index.js",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.1",
    "electron-debug": "^1.3.0",
    "electron-log": "^2.2.7",
    "electron-updater": "^2.8.0",
    "fs-extra": "^4.0.0",
    "monaco-loader": "^0.8.2"
  },
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "electron": "^1.6.11",
    "electron-builder": "^19.6.3",
    "request": "^2.81.0"
  },
  "build": {
    "publish": [
      "github"
    ],
    "appId": "com.v2ray.electron",
    "productName": "V2Ray Electron",
    "asarUnpack": [
      "assets/v2ray/*",
      "assets/proxy_conf_helper"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    }
  }
}
